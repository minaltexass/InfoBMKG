<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3399ff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.minall.infobmkg.AboutActivity" >

    <ImageView
        android:id="@+id/img_minal"
        android:layout_width="120dip"
        android:layout_height="180dip"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/minal" />

    <TextView
        android:id="@+id/info_minal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/img_minal"
        android:text="@string/minal" />
    
    <ImageView
        android:id="@+id/img_ardy"
        android:layout_width="120dip"
        android:layout_height="180dip"
        android:layout_below="@id/img_minal"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/ardy" />

    <TextView
        android:id="@+id/info_ardy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_minal"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/img_ardy"
        android:text="@string/ardy" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/img_ardy"
        android:layout_alignParentBottom="true"
        android:text="Thanks To : STIKOM DB JAMBI"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="italic"
        android:typeface="serif" />

</RelativeLayout>
